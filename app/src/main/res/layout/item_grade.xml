<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/examView"
    android:orientation="vertical"
    android:paddingTop="8dp">

    <RelativeLayout
        android:paddingRight="8dp"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/gradeNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/div_line"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/gradeInfoLayout"
            android:textColor="@color/defaultTextColor"
            android:textSize="16sp"
            tools:text="程序设计基础"/>

        <LinearLayout
            android:id="@+id/gradeInfoLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/div_line"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/gradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="20sp"
                tools:text="93"/>

            <TextView
                android:id="@+id/creditTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/defaultShowColor"
                android:textSize="14sp"
                tools:text="4.0"/>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/div_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:background="@color/defaultShowColor"/>

</LinearLayout>