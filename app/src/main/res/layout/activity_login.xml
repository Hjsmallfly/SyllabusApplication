<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/defaultLightBackground"
    tools:context="com.example.daidaijie.syllabusapplication.activity.LoginActivity">

    <RelativeLayout
        android:layout_weight="1"
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimary">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_logo_pencil"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="汕大课程表"
                android:textColor="@color/material_white"
                android:textSize="24sp"/>
        </LinearLayout>

    </RelativeLayout>

   <LinearLayout
       android:gravity="center_horizontal"
       android:paddingLeft="32dp"
       android:paddingRight="32dp"
       android:paddingTop="24dp"
       android:layout_weight="1"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="0dp">
       <android.support.design.widget.TextInputLayout
           android:layout_below="@+id/titleLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <EditText
               app:backgroundTint="@color/defaultShowColor"
               android:textColor="@color/defaultTextColor"
               android:hint="账号"
               android:singleLine="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </android.support.design.widget.TextInputLayout>

       <android.support.design.widget.TextInputLayout
           android:layout_marginTop="8dp"
           android:layout_below="@+id/titleLayout"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <EditText
               app:backgroundTint="@color/defaultShowColor"
               android:inputType="textPassword"
               android:textColor="@color/defaultTextColor"
               android:hint="密码"
               android:singleLine="true"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>
       </android.support.design.widget.TextInputLayout>

        <Button
           android:textColor="@color/material_white"
           android:textSize="20sp"
           android:text="登录"
           android:layout_marginTop="8dp"
           android:background="@drawable/bg_send_comment"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"/>
       <TextView
           android:textSize="14sp"
           android:textColor="@color/colorPrimary"
           android:layout_marginTop="8dp"
           android:text="注意事项"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>
   </LinearLayout>
</LinearLayout>
